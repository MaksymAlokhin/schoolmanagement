@page
@model sms.Pages.Curricula.DetailsModel

@{
    ViewData["Title"] = "Деталі";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Деталі</h1>

<div>
    <h4>Навантаження</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curriculum.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curriculum.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curriculum.Grade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curriculum.Grade.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curriculum.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curriculum.Subject.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curriculum.Teacher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Curriculum.Teacher.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit"
       asp-route-id="@Model.Curriculum.Id"
       asp-route-pageIndex="@Model.PageIndex"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter">
        Радагувати
    </a> |
    <a asp-page="./Index"
       asp-route-gradeId="@Model.Curriculum.GradeId"
       asp-route-pageIndex="@Model.PageIndex"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter">
        Назад
    </a>
</div>
