@page
@model sms.Pages.Register.DeleteModel

@{
    ViewData["Title"] = "Видалити";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Видалити</h1>

<h3>Ви впевнені, що хочете видалити?</h3>
<div>
    <h4>Оцінка</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gradebook.LessonDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gradebook.LessonDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gradebook.Mark)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gradebook.Mark)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gradebook.Student)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gradebook.Student.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gradebook.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gradebook.Subject.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gradebook.Teacher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gradebook.Teacher.FirstName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Gradebook.Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-page="./Index">Назад</a>
    </form>
</div>
