@page
@model sms.Pages.Register.StatisticsModel

@{
    ViewData["Title"] = "Статистичні дані";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Статистичні дані</h1>
<div class="container">
    <form method="get">
        <div class="row">
            <div class="col-sm-2">
                <div class="form-group">
                    <label asp-for="selectedYear" class="control-label"><i class="fas fa-users"></i></label>
                    <select asp-for="selectedYear" name="year" style="width:auto" asp-items="Model.YearSL" onchange="this.form.submit();">
                    </select>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label asp-for="selectedSemester" class="control-label"><i class="fas fa-user"></i></label>
                    <select asp-for="selectedSemester" name="semester" style="width:auto" asp-items="Model.SemesterSL" onchange="this.form.submit();"></select>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="container">
    <div class="row">
        <table class="table table-responsive table-hover table-striped table-sm text-nowrap col-container" id="schoolTable">
            <thead>
                <tr>
                    <th scope="col" style="text-align:center" class="col-auto">
                        <a asp-page="./Statistics" asp-route-sortOrder="@Model.NameSort">
                            Клас
                        </a>
                    </th>
                    <th scope="col" style="text-align: center" class="col-auto">
                        <a asp-page="./Statistics" asp-route-sortOrder="@Model.MarkSort">
                            Середній бал
                        </a>
                    </th>
                    <th scope="col" style="text-align: center" class="col-auto"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var grade in Model.grades)
                {
                    <tr>
                        <th scope="row" style="text-align:center">@grade.Name</th>
                        <td style="text-align:center">
                            @grade.Avg
                        </td>
                        <td>
                            <a asp-page="./Details" asp-route-year="@Model.selectedYear"
                               asp-route-semester="@Model.selectedSemester"
                               asp-route-gradeId="@grade.Id">
                                <i class="fas fa-eye fa-lg text-secondary"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-sm-8 offset-sm-1">
            <h4 style="text-align: center">Успішність</h4>
            <canvas id="barChart" width="800" height="500"></canvas>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var ctx = document.getElementById('barChart').getContext('2d');
        var year = $("#selectedYear").val();
        var semester = $("#selectedSemester").val();
        var randomColorGenerator = function () {
            return '#' + (Math.random().toString(16) + '0000000').slice(2, 8);
        };
        $.ajax({
            url: "?handler=Data",
            type: "POST",
            headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
            dataType: "json",
            data: { 'year': year, 'semester': semester },
            success: function (data) {
                var labels = [];
                var dataresults = [];
                $.each(data, function (index, item) {
                    labels.push(item.name);
                    dataresults.push(item.avg);
                });
                console.log(labels)
                console.log(dataresults)
                var myChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Успішність',
                            data: dataresults,
                            backgroundColor: randomColorGenerator,
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                suggestedMin: 1,
                                suggestedMax: 12,
                                beginAtZero: true
                            }
                        }
                    }
                });
            }
        });
    </script>
}