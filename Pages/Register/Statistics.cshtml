@page
@model sms.Pages.Register.StatisticsModel

@{
    ViewData["Title"] = "Статистичні дані";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Статистичні дані</h1>
<div class="container">
    <form method="get">
        <div class="row">
            <div class="col-sm-2">
                <div class="form-group">
                    <label asp-for="selectedYear" class="control-label"><i class="fas fa-users"></i></label>
                    <select asp-for="selectedYear" name="year" style="width:auto" asp-items="Model.YearSL" onchange="this.form.submit();">
                    </select>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label asp-for="selectedSemester" class="control-label"><i class="fas fa-user"></i></label>
                    <select asp-for="selectedSemester" name="semester" style="width:auto" asp-items="Model.SemesterSL" onchange="this.form.submit();"></select>
                </div>
            </div>
        </div>
    </form>
</div>


<div class="table-responsive col-container text-nowrap" id="schoolTable">
    <table class="table table-hover table-bordered table-striped table-sm" style="width:auto">
        <thead>
            <tr>
                <th scope="col" style="text-align:center" class="col-auto">
                    <a asp-page="./Statistics" asp-route-sortOrder="@Model.NameSort">
                        Клас
                    </a>
                </th>
                <th scope="col" style="text-align: center" class="col-auto">
                    <a asp-page="./Statistics" asp-route-sortOrder="@Model.MarkSort">
                        Середній бал
                    </a>
                </th>
                <th scope="col" style="text-align: center" class="col-auto"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model.grades)
            {
                <tr>
                    <th scope="row" style="text-align:center">@grade.Name</th>
                    <td style="text-align:center">
                        @grade.Avg.ToString("F1")
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-year="@Model.selectedYear"
                           asp-route-semester="@Model.selectedSemester"
                           asp-route-gradeId="@grade.Id">
                            <i class="fas fa-eye fa-lg text-secondary"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>