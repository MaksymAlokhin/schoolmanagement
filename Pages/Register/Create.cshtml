@page
@model sms.Pages.Register.CreateModel

@{
    ViewData["Title"] = "Створити";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Створити</h1>

<h4>Оцінка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Gradebook.LessonDate" class="control-label"></label>
                <input asp-for="Gradebook.LessonDate" class="form-control" />
                <span asp-validation-for="Gradebook.LessonDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gradebook.Mark" class="control-label"></label>
                <input asp-for="Gradebook.Mark" class="form-control" />
                <span asp-validation-for="Gradebook.Mark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gradebook.StudentId" class="control-label"></label>
                <select asp-for="Gradebook.StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Gradebook.SubjectId" class="control-label"></label>
                <select asp-for="Gradebook.SubjectId" class ="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Gradebook.TeacherId" class="control-label"></label>
                <select asp-for="Gradebook.TeacherId" class ="form-control" asp-items="ViewBag.TeacherId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
