@page
@model sms.Pages.Equipment.EditModel

@{
    ViewData["Title"] = "Редагувати";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Редагувати</h1>

<h4>Обладнання</h4>
<hr />
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Inventory.Id" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Inventory.Name" class="control-label"></label>
                <textarea rows="3" asp-for="Inventory.Name" class="form-control"></textarea>
                <span asp-validation-for="Inventory.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Inventory.InventoryNumber" class="control-label"></label>
                <input asp-for="Inventory.InventoryNumber" class="form-control" />
                <span asp-validation-for="Inventory.InventoryNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Inventory.Quantity" class="control-label"></label>
                <input asp-for="Inventory.Quantity" class="form-control" />
                <span asp-validation-for="Inventory.Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Inventory.Price" class="control-label"></label>
                <input asp-for="Inventory.Price" class="form-control" />
                <span asp-validation-for="Inventory.Price" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Inventory.InventoryDate" class="control-label"></label>
                <input asp-for="Inventory.InventoryDate" class="form-control" />
                <span asp-validation-for="Inventory.InventoryDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Inventory.DecommissionDate" class="control-label"></label>
                <input asp-for="Inventory.DecommissionDate" class="form-control" />
                <span asp-validation-for="Inventory.DecommissionDate" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-primary" />
    </div>
</form>
<div>
    @if (Model.Inventory.DecommissionDate.HasValue)
    {
        <a asp-page="./Decommissioned"
           asp-route-pageIndex="@Model.PageIndex"
           asp-route-sortOrder="@Model.CurrentSort"
           asp-route-currentFilter="@Model.CurrentFilter">
            Назад
        </a>
    }
    else
    {
        <a asp-page="./Index"
           asp-route-pageIndex="@Model.PageIndex"
           asp-route-sortOrder="@Model.CurrentSort"
           asp-route-currentFilter="@Model.CurrentFilter">
            Назад
        </a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
