@page
@model sms.Pages.Equipment.DetailsModel

@{
    ViewData["Title"] = "Деталі";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Деталі</h1>

<div>
    <h4>Обладнання</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inventory.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory.InventoryNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inventory.InventoryNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inventory.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory.Price)
        </dt>
        <dd class="col-sm-10">
            @Model.Inventory.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("uk"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory.InventoryDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inventory.InventoryDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory.DecommissionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inventory.DecommissionDate)
        </dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Inventory.Id" />
    <input type="hidden" name="pageIndex" asp-for="@Model.PageIndex" />
    @if (Model.Inventory.DecommissionDate.HasValue)
    {
        <input type="submit" value="Поставити на облік" class="btn btn-success" /> @:|
        <a asp-page="./Edit" asp-route-id="@Model.Inventory.Id" asp-route-pageIndex="@Model.PageIndex">Редагувати</a> @:|
        <a asp-page="./Decommissioned" asp-route-pageIndex="@Model.PageIndex">Назад</a>
    }
    else
    {
        <input type="submit" value="Списати" class="btn btn-danger" /> @:|
        <a asp-page="./Edit" asp-route-id="@Model.Inventory.Id">Редагувати</a> @:|
        <a asp-page="./Index" asp-route-pageIndex="@Model.PageIndex">Назад</a>
    }
</form>
