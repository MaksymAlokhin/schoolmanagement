@page
@model sms.Pages.Equipment.DeleteModel

@{
    ViewData["Title"] = "Видалити";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Видалити</h1>

<h3>Ви впевнені, що хочете видалити це?</h3>
<div>
    <h4>Обладнання</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inventory.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory.InventoryNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inventory.InventoryNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inventory.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory.Price)
        </dt>
        <dd class="col-sm-10">
            @Model.Inventory.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("uk"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory.InventoryDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inventory.InventoryDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory.DecommissionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inventory.DecommissionDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Inventory.Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-pageIndex="@Model.PageIndex">Назад</a>
    </form>
</div>
