@page
@model sms.Pages.AdminModel
@{
    ViewData["Title"] = "Admin";
    ViewData["ActivePage"] = NavPages.Admin;
    Layout = "~/Pages/Shared/_LayoutInner.cshtml";
}

<h2>Змініть повноваження</h2>
@*asp-page-handler="filter" asp-page="./Admin"*@
<form method="get">
    <div class="form-action col-md-4">
        <label asp-for="@Model.NoRoles">Без повноважень</label>
        <input asp-for="@Model.NoRoles" type="checkbox" value="@Model.NoRoles" /> |
        @*<input type="checkbox"
            name="NoRoles"
            value="@Model.NoRoles"
            @(Html.Raw(@Model.NoRoles ? "checked=\"checked\"" : "")) />*@

        <input type="submit" value="Фільтр" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.userRoles[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userRoles[0].RoleName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.userRoles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <form method="post">
                        <div class="form-group col-md-4">
                            <input type="hidden" name="mainid" value="@item.UserId" />
                            <select class="userselect" asp-items="@Model.RoleNameSL" name="rolename">
                                <option selected>@item.RoleName</option>
                            </select>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            $(".userselect").change(function () {
                $(this).closest('form').submit();
            })
        })
    </script>
}
