@{
    ViewData["Title"] = "Admin";
    ViewData["ActivePage"] = NavPages.Admin;
    Layout = "~/Pages/Shared/_LayoutInner.cshtml";
}

<h2>Змініть повноваження</h2>

<form method="get">
    <div class="form-action col-md-4">
        <label>Без повноважень</label>
        <input type="checkbox" value="True" data-val="true" data-val-required="The NoRoles field is required." id="noRoles" name="noRoles" @(Html.Raw(Model.NoRoles ? "checked=\"checked\"" : "")) /> |
        <input type="submit" value="Фільтр" class="btn btn-primary" />
    </div>
</form>

