@page
@model sms.Pages.Subjects.DeleteModel

@{
    ViewData["Title"] = "Видалити";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Видалити</h1>

<h3>Ви впевнені, що хочете видалити?</h3>
<div>
    <h4>Предмет</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.Name)
        </dd>
        <dt class="col-sm-2">
            Список вчителів
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Subject.Teachers.First().FullName)</th>
                </tr>
                @foreach (var item in Model.Subject.Teachers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Subject.Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-pageIndex="@Model.PageIndex">Назад</a>
    </form>
</div>
