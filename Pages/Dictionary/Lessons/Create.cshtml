@page
@model sms.Pages.Lessons.CreateModel

@{
    ViewData["Title"] = "Створити";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Створити</h1>

<h4>Урок</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lesson.day" class="control-label"></label>
                <select asp-for="Lesson.day" class="form-control"></select>
                <span asp-validation-for="Lesson.day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.Slot" class="control-label"></label>
                <input asp-for="Lesson.Slot" class="form-control" />
                <span asp-validation-for="Lesson.Slot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.Room" class="control-label"></label>
                <input asp-for="Lesson.Room" class="form-control" />
                <span asp-validation-for="Lesson.Room" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.GradeId" class="control-label"></label>
                <select asp-for="Lesson.GradeId" class ="form-control" asp-items="ViewBag.GradeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.SubjectId" class="control-label"></label>
                <select asp-for="Lesson.SubjectId" class ="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.TeacherId" class="control-label"></label>
                <select asp-for="Lesson.TeacherId" class ="form-control" asp-items="ViewBag.TeacherId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
