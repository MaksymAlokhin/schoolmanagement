@page
@model sms.Pages.Grades.CreateModel

@{
    ViewData["Title"] = "Створити";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Створити</h1>

<h4>Клас</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Grade.Number" class="control-label">Клас</label>
                <input asp-for="Grade.Number" class="form-control" />
                <span asp-validation-for="Grade.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade.Letter" class="control-label">Буква</label>
                <input asp-for="Grade.Letter" class="form-control" />
                <span asp-validation-for="Grade.Letter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
