@page
@model sms.Pages.Teachers.DetailsModel

@{
    ViewData["Title"] = "Деталі";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Деталі</h1>

<div>
    <h4>@Model.Teacher.FullName, вчитель</h4>
    <hr />
    @if (!string.IsNullOrEmpty(@Model.Teacher.ProfilePicture))
    {
        <div class="row">
            <div class="col-md-4">
                <div class="img-fluid mw-100 h-auto">
                    <img src="~/images/avatars/@Model.Teacher.ProfilePicture" />
                </div>
            </div>
        </div>
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.Patronymic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.Patronymic)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.Subjects.First().Name)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Teacher.Subjects.First().Name)</th>
                </tr>
                @foreach (var item in Model.Teacher.Subjects)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Teacher.Id" asp-route-pageIndex="@Model.PageIndex">Редагувати</a> |
    <a asp-page="./Index" asp-route-pageIndex="@Model.PageIndex">Назад</a>
</div>
