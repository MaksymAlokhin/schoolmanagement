<div>
    <h4>Урок</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lesson.Day)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.Day)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lesson.Slot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.Slot)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lesson.Room)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.Room)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lesson.Grade.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.Grade.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lesson.Subject.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.Subject.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lesson.Teacher.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.Teacher.FullName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Lesson.Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-day="@Model.day">Назад</a>
